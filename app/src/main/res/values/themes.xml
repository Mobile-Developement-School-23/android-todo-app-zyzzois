<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/back_color</item>
    </style>

    <style name="Theme.ToDo" parent="Base.Theme.ToDo" />

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">
            @style/FabShapeStyle
        </item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="collapsedTitleStyle" parent="Widget.Material3.CollapsingToolbar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
    <style name="expandedTitleStyle" parent="Widget.Material3.CollapsingToolbar">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/medium_gray</item>
    </style>

</resources>