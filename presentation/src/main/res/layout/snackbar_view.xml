<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:background="@drawable/snackbar_background"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/animatedProgressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/anim_progressbar"
        android:src="@drawable/progress_numbers" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:textColor="@color/color_light_white"
        android:text="@string/todo_deleted" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:padding="15dp"
        android:textColor="@color/color_light_white"
        android:gravity="center"
        android:text="@string/cancel" />

</LinearLayout>